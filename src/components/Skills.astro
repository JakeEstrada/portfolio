---
import TerminalAnimation from './TerminalAnimation.astro';

const skills = {
  'Languages': ['Python', 'JavaScript', 'TypeScript', 'C', 'C++', 'SQL', 'Bash'],
  'Frontend': ['React', 'Vite', 'HTML', 'CSS', 'Astro', 'UI animation'],
  'Backend': ['Node.js', 'Express', 'Flask', 'REST APIs', 'Authentication'],
  'Databases': ['PostgreSQL', 'MongoDB', 'SQLite'],
  'Systems': ['Linux (primary)', 'Windows (WSL)', 'macOS', 'Docker', 'Git', 'tmux'],
  'ML/Data': ['PyTorch', 'scikit-learn', 'pandas', 'NumPy', 'NLP pipelines'],
  'Embedded': ['Arduino', 'Raspberry Pi', 'C firmware', 'sensors', 'stepper motors'],
};
---

<section class="container mx-auto px-6 md:px-12 py-24 border-b border-neutral-200 dark:border-neutral-900">
  <div class="max-w-4xl mx-auto text-center">
    <div class="mb-8">
      <TerminalAnimation command="ls -la skills/" output="Listing skills and technologies..." targetId="skills-content" />
    </div>
    <div id="skills-content" class="content-hidden opacity-0">
      <h2 class="section-title content-item">Skills</h2>
      <div class="code-block">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 font-mono text-sm">
          {Object.entries(skills).map(([category, items]) => (
            <div class="content-item">
              <div class="mb-3">
                <span class="terminal-prompt">$</span> <span class="text-neutral-900 dark:text-neutral-100">cat</span> <span class="rainbow-filename">{category.toLowerCase().replace(/\s+/g, '-').replace(/[()]/g, '')}.txt</span>
              </div>
              <ul class="space-y-1 text-neutral-700 dark:text-neutral-300">
                {items.map((item) => (
                  <li class="flex items-center gap-2">
                    <span class="rainbow-arrow">â†’</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
        <div class="mt-6 pt-4 border-t border-neutral-200 dark:border-neutral-900 content-item">
          <p class="font-mono text-xs text-neutral-600 dark:text-neutral-400">
            <span class="comment-line">//</span> Familiar with: Java, Visual Basic
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
